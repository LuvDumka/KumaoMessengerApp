<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".views.fragments.MoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Theme Selection Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theme Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose your preferred theme:"
            android:layout_marginBottom="12dp"
            android:textColor="?android:attr/textColorSecondary" />

        <RadioGroup
            android:id="@+id/themeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/lightThemeRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Light Theme"
                android:layout_marginBottom="8dp"
                android:textColor="?android:attr/textColorPrimary" />

            <RadioButton
                android:id="@+id/darkThemeRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dark Theme"
                android:layout_marginBottom="8dp"
                android:textColor="?android:attr/textColorPrimary" />

            <RadioButton
                android:id="@+id/systemThemeRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="System Default"
                android:textColor="?android:attr/textColorPrimary" />

        </RadioGroup>

        <!-- Additional Settings Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More Options"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Additional settings will be added here in future updates."
            android:textColor="?android:attr/textColorSecondary"
            android:padding="8dp" />

    </LinearLayout>

</ScrollView>
